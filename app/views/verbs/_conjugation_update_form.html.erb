<table>
    <tbody>
        <%= form.fields_for :conjugations do |conjugation_subform| %>
            <%# Get personal_pronoun from ActionView::Helpers::FormBuilder object%>
            <% personal_pronoun = conjugation_subform.object.personal_pronoun %>
            <tr>
                <%= conjugation_subform.hidden_field :personal_pronoun %>
                <td class='text-lg font-bold text-red-700 px-4 py-0 mt-2'><%= personal_pronoun %></td>
                <td class='text-lg px-4 py-0 mt-2'><%= conjugation_subform.text_field :present_simple, class: "block shadow rounded-md border border-gray-400 outline-none px-4 py-2 mt-2 w-full" %><td>
                <td class='text-lg px-4 py-0 mt-2'><%= conjugation_subform.text_field :past_simple, class: "block shadow rounded-md border border-gray-400 outline-none px-4 py-2 mt-2 w-full" %><td>
                <td class='text-lg px-4 py-0 mt-2'><%= conjugation_subform.text_field :present_perfect, class: "block shadow rounded-md border border-gray-400 outline-none px-4 py-2 mt-2 w-full" %><td>
            </tr>
        <% end %>
    </tbody>
</table>
