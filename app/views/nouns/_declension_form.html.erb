<table> 
  <tbody>
    <% gcase_id = Gcase.first.id %>
    <%= form.fields_for :noun_declensions do |noun_declension_subform| %>
      <%= noun_declension_subform.hidden_field :gcase_id, value: gcase_id %>
      <tr>
          <td class='text-xl px-4 py-0 mt-2'><%= Gcase.find(gcase_id)[locale.to_sym].capitalize %></td>

          <td class='text-xl px-4 py-0 mt-2'><%= noun_declension_subform.text_field :singular,
            class: "block shadow rounded-md border border-gray-400 outline-none px-4 py-2 mt-2 w-full" %>
          </td>
          <td class='text-xl px-4 py-0 mt-2'><%= noun_declension_subform.text_field :plural,
            class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
          </td>
      </tr>
      <% gcase_id += 1 %>
    <% end %>
  </tbody>
</table>
