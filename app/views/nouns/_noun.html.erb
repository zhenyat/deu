<div id="<%= dom_id noun %>">

  <div class="grid grid-cols-4 gap-4 my-2">
    <div class="col-span-2"><%= "#{noun.class.human_attribute_name('de')}:" %></div>
    <strong style="color: teal">
      <%= noun.de %>
      <%= fine_transcription(noun.transcription) %>
    </strong>
  </div>
  
  <div class="grid grid-cols-4 gap-4 my-2">
    <div class="col-span-2"><%= "#{Gender.model_name.human(count: 1)}:" %></div>
    <strong><%= noun.gender[locale] %></strong>
  </div>

  <div class="grid grid-cols-4 gap-4 my-2">
    <div class="col-span-2"><%= "#{noun.class.human_attribute_name('en')}:" %></div>
    <strong><%= noun.en %></strong>
  </div>

  <div class="grid grid-cols-4 gap-4 my-2">
    <div class="col-span-2"><%= "#{noun.class.human_attribute_name('ru')}:" %></div>
    <strong><%= noun.ru %></strong>
  </div>

  <div class="grid grid-cols-4 gap-4 my-2">
    <div class="col-span-2"><%= "#{noun.class.human_attribute_name('plural')}:" %></div>
    <strong><%= with_ending(noun) %></strong>
  </div>

  <div class="grid grid-cols-4 gap-4 my-2">
    <div class="col-span-2"><%= "#{noun.class.human_attribute_name('comment')}:" %></div>
    <strong><%= noun.comment %></strong>
  </div>
</div>
